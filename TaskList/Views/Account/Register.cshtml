
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_RegisterAndLoginLayout.cshtml";
}

<div class="row">
    <div class="col-4 offset-4 mt-5">
        <div id="RegisterCard" class="card">
            <div class="card-body">
                <div>
                    <p>Test:</p>
                    <p>
                        <span class="text-info">email:</span> superUser@fake.com,
                        <span class="text-info">password:</span> 123456
                    </p>
                </div>
                <h1 class="card-title mt-2">Welcome.</h1>
                <h2 class="card-subtitle mt-1 mb-4">Create your free account.</h2>
                <span class="error-info text-danger"></span>
                <form id="RegisterForm" method="post">
                    <div class="form-group">
                        <label for="UserName">Email:</label>
                        <input id="UserName" name="UserName" type="text" class="form-control" placeholder="email" required pattern="^[a-zA-Z][a-zA-Z0-9]*@("@")[a-zA-Z]+\.[a-zA-Z]+$" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input id="Password" name="Password" type="password" class="form-control" placeholder="password" required maxlength="100" pattern=".{6,}" />
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm password:</label>
                        <input id="ConfirmPassword" name="ConfirmPassword" type="password" placeholder="confirm password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <a href="@Url.Action("Login","Account")">Log in</a>
                    </div>
                    <div class="form-group d-flex">
                        <input type="submit" value="Register" class="btn btn-primary d-block w-100" />
                    </div>
                </form>
            </div>
        </div>
        <div id="Loading" class="card" style="margin-top: 33%;">
            <div class="card-body">
                <h3>Loading ...</h3>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated w-100" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
</div>

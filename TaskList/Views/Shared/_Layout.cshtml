<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/dist/sass.bundle.js"></script>
</head>
<body>
    <div class="loader">
        <img src="~/Client/content/loader.svg" />
    </div>

    <div class="container">
        <header class="row">
            <nav class="col-12 navbar navbar-expand-lg navbar-dark bg-dark d-flex justify-content-between">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">Task list application.</a>
                <form id="LogoutForm" class="form-inline">
                    <input type="submit" value="Log out" class="btn btn-danger" />
                </form>
            </nav>
        </header>
        <main class="body-content">
            @RenderBody()
            <div class="col-md-12 justify-content-end text-white d-flex">
                <p class="mt-3 mb-3 mr-4">&copy;Mateusz Turek</p>
            </div>
        </main>
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/dist/tscript.bundle.js"></script>
</body>
</html>
